<UserControl
    x:Class="FluidIrc.Controls.InputServerBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FluidIrc.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:FluidIrc.ViewModels"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance vm:InputServerBoxViewModel}"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <StackPanel Orientation="Vertical">
        <TextBox MaxLength="80" Header="Name" PlaceholderText="Length 3-80 chars" Text="{Binding ServerName}"/>
        <TextBox MaxLength="100" Header="Address" PlaceholderText="Max length 100" Text="{Binding ServerAddress}"/>
        <TextBox Name="PortTextBox" MaxLength="32" Header="Port" BeforeTextChanging="PortTextBox_OnBeforeTextChanging" Text="{Binding ServerPort}"/>
        <ToggleSwitch Header="Enable SSL" IsEnabled="{Binding EnableSsl}"/>
    </StackPanel>
</UserControl>
